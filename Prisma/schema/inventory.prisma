model Inventory{
    id String @id @default(uuid())
    refrence String
    buyingCost Int
    quantity Int
    description String
    sellingCost Int
    warehouseLocation String
    quantityType String
    alarm Int
    image Image[] @relation("ImageToInventory")
    catgoryId String
    category Category @relation("CategoryToInventory" , fields: [catgoryId], references: [id] , onDelete: Cascade)
}

model Image{
    fileId String @id 
    name String
    url String
    thumbnailUrl String
    inventoryId String
    inventory Inventory @relation("ImageToInventory" , fields: [inventoryId], references: [id] , onDelete: Cascade)
}

model Category{
    id String @id @default(uuid())
    category String
    inventory Inventory[] @relation("CategoryToInventory")
}