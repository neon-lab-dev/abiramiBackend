datasource db {
  provider = "mysql"
  url      = env("DATABASE_URI")
}
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

enum status{
    ACTIVE
    INACTIVE
}

enum billingStatus{
    PAID
    PENDING
    DRAFT
}

model Client{
    id String @id @default(uuid())
    companyName String
    contactPerson String
    GST String
    mobileNum String
    landLineNum String?
    email String @unique
    addressLine1 String
    addressLine2 String?
    addressLine3 String?
    city String
    pincode Int
    state String
    country String
    status status
    createdAt DateTime @default(now())
    updataedAt DateTime @updatedAt

    @@index([mobileNum])
    @@index([addressLine1])
}